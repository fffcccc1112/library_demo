<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.library.libraryserver.mapper.UserMapper">
    <select id="findAll" resultType="com.library.libraryserver.pojo.User">
        select * from user
    </select>
    <!-- insert update delete的返回值resultType默认为int类型 -->
    <insert id="addUser" parameterType="com.library.libraryserver.pojo.User" >
        insert into user() value(#{userid},#{username},#{password},#{phone})
    </insert>
    <update id="updateUser" parameterType="com.library.libraryserver.pojo.User">
        update user set username=#{username},password=#{password},phone=#{phone} where userid=#{id}
    </update>
    <delete id="deleteUser" parameterType="com.library.libraryserver.pojo.User">
        delete from user where userid=#{id}
    </delete>
</mapper>
